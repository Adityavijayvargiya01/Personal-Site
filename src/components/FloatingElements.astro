---
// Floating background elements for visual interest
---

<div class="floating-elements" aria-hidden="true">
  <div class="floating-circle floating-circle-1"></div>
  <div class="floating-circle floating-circle-2"></div>
  <div class="floating-circle floating-circle-3"></div>
  <div class="floating-square floating-square-1"></div>
  <div class="floating-square floating-square-2"></div>
</div>

<style>
  .floating-elements {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: -1;
    overflow: hidden;
  }

  .floating-circle,
  .floating-square {
    position: absolute;
    opacity: 0.03;
    background: linear-gradient(135deg, rgb(var(--primary)), rgb(var(--accent)));
    border-radius: 50%;
  }

  .floating-square {
    border-radius: 10px;
    transform: rotate(45deg);
  }

  .floating-circle-1 {
    width: 200px;
    height: 200px;
    top: 10%;
    left: 80%;
    animation: float 20s ease-in-out infinite;
  }

  .floating-circle-2 {
    width: 150px;
    height: 150px;
    top: 60%;
    left: 10%;
    animation: float 25s ease-in-out infinite reverse;
  }

  .floating-circle-3 {
    width: 100px;
    height: 100px;
    top: 30%;
    left: 20%;
    animation: float 30s ease-in-out infinite;
    animation-delay: -10s;
  }

  .floating-square-1 {
    width: 80px;
    height: 80px;
    top: 70%;
    right: 15%;
    animation: float 22s ease-in-out infinite;
    animation-delay: -5s;
  }

  .floating-square-2 {
    width: 60px;
    height: 60px;
    top: 15%;
    right: 40%;
    animation: float 28s ease-in-out infinite reverse;
    animation-delay: -15s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    25% {
      transform: translateY(-20px) rotate(90deg);
    }
    50% {
      transform: translateY(-40px) rotate(180deg);
    }
    75% {
      transform: translateY(-20px) rotate(270deg);
    }
  }

  /* Hide floating elements on reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .floating-elements {
      display: none;
    }
  }

  /* Hide on small screens to avoid clutter */
  @media (max-width: 768px) {
    .floating-elements {
      display: none;
    }
  }
</style>
