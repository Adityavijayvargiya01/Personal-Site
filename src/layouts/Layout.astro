---
import '@/styles/global.css'
import '@/styles/typography.css'

import FloatingElements from '@/components/FloatingElements.astro'
import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Header from '@/components/Header.astro'
import PerformanceOptimizer from '@/components/PerformanceOptimizer.astro'
import ServiceWorker from '@/components/ServiceWorker.astro'
import { SITE } from '@/consts'
import Analytics from '@vercel/analytics/astro'
import SpeedInsights from '@vercel/speed-insights/astro'
import { ClientRouter } from 'astro:transitions'
---

<!doctype html>
<html class="bg-background text-foreground" lang={SITE.locale}>
  <Head>
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net" />
    <PerformanceOptimizer />
    <slot name="head" />
    <ClientRouter />
  </Head>
  <body class="overflow-x-hidden">
    <FloatingElements />
    <div class="flex h-fit min-h-screen flex-col gap-y-6 font-sans">
      <div
        class="bg-background/50 sticky top-0 z-50 divide-y backdrop-blur-sm xl:divide-none"
      >
        <Header />
        <slot name="subposts-navigation" />
        <slot name="table-of-contents" />
      </div>
      <main class="grow" transition:animate="fade">
        <div class="mx-auto flex max-w-3xl grow flex-col gap-y-6 px-6 sm:px-4">
          <slot />
        </div>      </main>
      <Footer />
    </div>
    <Analytics />
    <SpeedInsights />
    <ServiceWorker />
    <script>
      import '@/lib/scroll-animations'
    </script>
  </body>
</html>
