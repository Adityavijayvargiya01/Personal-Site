---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import BlogHead from '@/components/PostHead.astro'
import BlogNavigation from '@/components/PostNavigation.astro'
import SubblogsHeader from '@/components/SubpostsHeader.astro'
import SubblogsSidebar from '@/components/SubpostsSidebar.astro'
import TOCHeader from '@/components/TOCHeader.astro'
import TOCSidebar from '@/components/TOCSidebar.astro'
import { badgeVariants } from '@/components/ui/badge'
import { Button } from '@/components/ui/button'
import { FadeIn } from '@/components/ui/motion'
import { Separator } from '@/components/ui/separator'
import Layout from '@/layouts/Layout.astro'
import {
  getAdjacentBlogs,
  getAllBlogsAndSubblogs,
  getParentId,
  getParentBlog,
  getBlogReadingTime,
  getSubblogCount,
  hasSubblogs,
  isSubblog,
} from '@/lib/data-utils'
import { formatDate } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import { render } from 'astro:content'

export async function getStaticPaths() {
  const blogs = await getAllBlogsAndSubblogs()
  return blogs.map((blog) => ({
    params: { id: blog.id },
    props: blog,
  }))
}

const blog = Astro.props
const currentBlogId = Astro.params.id
const { Content, headings } = await render(blog)

const isCurrentSubblog = isSubblog(currentBlogId)
const navigation = await getAdjacentBlogs(currentBlogId)
const parentBlog = isCurrentSubblog ? await getParentBlog(currentBlogId) : null

const hasChildBlogs = await hasSubblogs(currentBlogId)
const subblogCount = !isCurrentSubblog
  ? await getSubblogCount(currentBlogId)
  : 0
const blogReadingTime = await getBlogReadingTime(currentBlogId)
---

<Layout>
  <BlogHead slot="head" post={blog} />
  {
    (hasChildBlogs || isCurrentSubblog) && (
      <SubblogsHeader
        slot="subblogs-navigation"
        parentId={isCurrentSubblog ? getParentId(currentBlogId) : currentBlogId}
      />
    )
  }
  {
    false && headings?.length > 0 && (
      <TOCHeader slot="table-of-contents" headings={headings} />
    )
  }

  <FadeIn
    client:load
    delay={0.4}
    className="relative left-[calc(50%-50vw)] grid w-screen grid-cols-[minmax(0px,1fr)_min(calc(var(--breakpoint-md)-2rem),100%)_minmax(0px,1fr)] gap-y-6 px-5 sm:px-6 md:px-8"
  >
    <div class="col-start-2">
      <Breadcrumbs
        items={[
          { href: '/blogs', label: 'Blog', icon: 'ph:books-duotone' },
          ...(isCurrentSubblog && parentBlog
            ? [
                {
                  href: `/blog/${parentBlog.id}`,
                  label: parentBlog.data.title,
                  icon: 'ph:book-open-duotone',
                },
                {
                  href: `/blog/${currentBlogId}`,
                  label: blog.data.title,
                  icon: 'ph:file-text-duotone',
                },
              ]
            : [
                {
                  href: `/blog/${currentBlogId}`,
                  label: blog.data.title,
                  icon: 'ph:book-open-duotone',
                },
              ]),
        ]}
      />
    </div>
    {
      blog.data.image && (
        <Image
          src={blog.data.image}
          alt={blog.data.title}
          width={1200}
          height={630}
          class="themed-image col-span-full mx-auto w-full max-w-3xl rounded-lg object-cover"
          quality={90}
          loading="eager"
          decoding="async"
          format="webp"
          widths={[600, 900, 1200, 1600]}
          sizes="(max-width: 768px) 100vw, (max-width: 1200px) 900px, 1200px"
          transition:name={`blog-image-${currentBlogId}`}
        />
      )
    }

    <section class="col-start-2 flex flex-col gap-y-6 text-center">
      <div class="flex flex-col">
        <h1
          class="font-poppins mb-2 scroll-mt-31 text-4xl leading-tight font-medium text-pretty"
          id="blog-title"
        >
          {blog.data.title}
        </h1>
        <div
          class="text-muted-foreground mb-4 flex flex-wrap items-center justify-center gap-2 text-sm"
        >
          <div class="flex items-center gap-2">
            <span>{formatDate(blog.data.date)}</span>
            <Separator orientation="vertical" className="h-4!" />
            <span>{blogReadingTime}</span>
            {
              subblogCount > 0 && (
                <>
                  {' '}
                  <Separator orientation="vertical" className="h-4!" />{' '}
                  <span class="flex items-center gap-1">
                    {' '}
                    <Icon name="ph:file-text-duotone" class="size-3" />{' '}
                    {subblogCount} subblog{subblogCount === 1 ? '' : 's'}{' '}
                  </span>{' '}
                </>
              )
            }
          </div>
        </div>

        <!-- <div class="flex flex-wrap justify-center gap-2">
          {
            blog.data.tags && blog.data.tags.length > 0 ? (
              blog.data.tags.map((tag) => (
                <a
                  href={`/tags/${tag}`}
                  class={badgeVariants({ variant: 'secondary' })}
                >
                  {tag}
                </a>
              ))
            ) : (
              <span class="text-muted-foreground text-sm">
                No tags available
              </span>
            )
          }
        </div> -->
      </div>

      <!-- <BlogNavigation
        newerBlog={navigation.newer}
        olderBlog={navigation.older}
        parentBlog={isCurrentSubblog ? navigation.parent : undefined}
      /> -->
    </section>

    {false && headings.length > 0 && <TOCSidebar headings={headings} />}

    <article class="prose col-start-2 mx-auto max-w-none px-1 sm:px-0">
      <Content />
    </article>

    {
      (hasChildBlogs || isCurrentSubblog) && (
        <SubblogsSidebar
          parentId={
            isCurrentSubblog ? getParentId(currentBlogId) : currentBlogId
          }
          className="w-64"
        />
      )
    }

    <BlogNavigation
      newerPost={navigation.newer}
      olderPost={navigation.older}
      parentPost={isCurrentSubblog ? navigation.parent : undefined}
    />
  </FadeIn>

  <Button
    variant="outline"
    size="icon"
    className="group fixed right-8 bottom-8 z-50 hidden"
    id="scroll-to-top"
    title="Scroll to top"
    aria-label="Scroll to top"
  >
    <Icon
      name="ph:arrow-up-duotone"
      class="mx-auto size-4 transition-all group-hover:-translate-y-0.5"
    />
  </Button>

  <script>
    document.addEventListener('astro:page-load', () => {
      const scrollToTopButton = document.getElementById('scroll-to-top')
      const footer = document.querySelector('footer')

      if (scrollToTopButton && footer) {
        scrollToTopButton.addEventListener('click', () => {
          window.scrollTo({ top: 0, behavior: 'smooth' })
        })

        window.addEventListener('scroll', () => {
          const footerRect = footer.getBoundingClientRect()
          const isFooterVisible = footerRect.top <= window.innerHeight

          scrollToTopButton.classList.toggle(
            'hidden',
            window.scrollY <= 300 || isFooterVisible,
          )
        })
      }
    })
  </script>
</Layout>
