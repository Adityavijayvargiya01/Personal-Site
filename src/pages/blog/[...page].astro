---
import BlogCard from '@/components/BlogCard.astro'
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import { FadeIn } from '@/components/ui/motion'
import Layout from '@/layouts/Layout.astro'
import { SITE } from '@/consts'
import { getAllPosts, groupPostsByYear } from '@/lib/data-utils'
import type { PaginateFunction } from 'astro'

export async function getStaticPaths({
  paginate,
}: {
  paginate: PaginateFunction
}) {
  const allPosts = await getAllPosts()
  return paginate(allPosts, { pageSize: SITE.postsPerPage })
}

const allPosts = await getAllPosts()
const postsByYear = groupPostsByYear(allPosts)
const years = Object.keys(postsByYear).sort((a, b) => parseInt(b) - parseInt(a))
---

<Layout>
  <PageHead slot="head" title="Blog" />
  <Breadcrumbs items={[{ label: 'Blog', icon: 'ph:article-duotone' }]} />
  
  <section>
    <div>
      <div class="min-w-full">
        <FadeIn client:load delay={0}>
          <h1 class="mb-6 text-3xl font-bold">All Posts</h1>
        </FadeIn>
        <FadeIn client:load delay={0.1}>
          <div class="flex flex-col gap-y-8">
            {
              years.map((year) => (
                <section class="flex flex-col gap-y-4">
                  <div class="font-medium">{year}</div>
                  <ul class="flex flex-col gap-4">
                    {postsByYear[year].map((post) => (
                      <li>
                        <BlogCard entry={post} />
                      </li>
                    ))}
                  </ul>
                </section>
              ))
            }
          </div>
        </FadeIn>
      </div>
    </div>
  </section>
</Layout>
