---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import ExperienceCard from '@/components/ExperienceCard.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
import { Motion } from '@/components/motion'
import { getAllExperience } from '@/lib/data-utils'

const experience = await getAllExperience()
---

<Layout>
  <PageHead slot="head" title="Experience" />
  <Breadcrumbs items={[{ label: 'Experience', icon: 'ph:briefcase-duotone' }]} />
  <Motion client:load>
    <section>
      <div>
        <div class="min-w-full">
          <Motion client:load delay={0.1}>
            <h1 class="mb-6 text-3xl font-bold">Work Experience</h1>
          </Motion>
          <Motion client:load delay={0.15}>
            <p class="text-muted-foreground mb-8 text-sm leading-relaxed">
              Here's a timeline of my professional journey, including internships, projects, and research work that have shaped my skills in software development.
            </p>
          </Motion>
          <div class="flex flex-col gap-4">
            {experience.map((exp, index) => (
              <Motion client:visible delay={index * 0.1}>
                <ExperienceCard experience={exp} />
              </Motion>
            ))}
          </div>
        </div>
      </div>
    </section>
  </Motion>
</Layout>
