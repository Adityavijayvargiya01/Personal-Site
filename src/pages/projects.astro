---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import ProjectCard from '@/components/ProjectCard.astro'
import Layout from '@/layouts/Layout.astro'
import { getAllProjects } from '@/lib/data-utils'
import { FadeIn } from '@/components/ui/motion'

const projects = await getAllProjects()
---

<Layout>
  <PageHead slot="head" title="Projects" />
  <Breadcrumbs items={[{ label: 'Projects', icon: 'ph:folder-duotone' }]} />
  <section>
    <div>
      <div class="min-w-full">
        <FadeIn client:load delay={0}>
          <h1 class="mb-6 text-3xl font-bold">Projects</h1>
        </FadeIn>
        <FadeIn client:load delay={0.1}>
          <div class="flex flex-col gap-6">
            {projects.map((project, index) => (
              <div>
                <ProjectCard project={project} />
              </div>
            ))}
          </div>
        </FadeIn>
      </div>
    </div>
  </section>
</Layout>