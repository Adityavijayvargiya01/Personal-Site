---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import ProjectCard from '@/components/ProjectCard.astro'
import { PageTransition, SpringIn } from '@/components/ui/motion'
import Layout from '@/layouts/Layout.astro'
import { getAllProjects } from '@/lib/data-utils'

const projects = await getAllProjects()
---

<Layout>
  <PageHead slot="head" title="Projects" />
  <Breadcrumbs items={[{ label: 'Projects', icon: 'ph:folder-duotone' }]} />
  <PageTransition client:load>
    <section>
      <div>
        <div class="min-w-full">
          <SpringIn client:load delay={0.1}>
            <div>
              <h1 class="mb-6 text-3xl font-bold">Projects</h1>
            </div>
          </SpringIn>
          <SpringIn client:load delay={0.15}>
            <div>
              <div class="flex flex-col gap-6">
                {projects.map((project) => (
                  <div>
                    <ProjectCard project={project} />
                  </div>
                ))}
              </div>
            </div>
          </SpringIn>
        </div>
      </div>
    </section>
  </PageTransition>
</Layout>